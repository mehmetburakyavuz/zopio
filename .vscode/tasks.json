{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Dev",
      "type": "shell",
      "command": "pnpm dev",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm lint",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "pnpm format",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "pnpm test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm typecheck",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Turbo Check",
      "type": "shell",
      "command": "turbo typecheck",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Translate",
      "type": "shell",
      "command": "pnpm translate",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Boundaries",
      "type": "shell",
      "command": "pnpm boundaries",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
